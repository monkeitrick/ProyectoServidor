<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Proyecto</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/poolSustitos</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>ServletLogin</servlet-name>
    <servlet-class>servlets.ServletLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletLogin</servlet-name>
    <url-pattern>/ServletLogin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletProductos</servlet-name>
    <servlet-class>servlets.ServletProductos</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletProductos</servlet-name>
    <url-pattern>/ServletProductos</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletProveedores</servlet-name>
    <servlet-class>servlets.ServletProveedores</servlet-class>
    <init-param>
      <param-name>fichero</param-name>
      <param-value>proveedores.txt</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletProveedores</servlet-name>
    <url-pattern>/ServletProveedores</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletVaciarCesta</servlet-name>
    <servlet-class>servlets.ServletVaciarCesta</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletVaciarCesta</servlet-name>
    <url-pattern>/ServletVaciarCesta</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletUsuarios</servlet-name>
    <servlet-class>servlets.ServletUsuarios</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletUsuarios</servlet-name>
    <url-pattern>/ServletUsuarios</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletAgregarLineaPedidos</servlet-name>
    <servlet-class>servlets.ServletAgregarLineaPedidos</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletAgregarLineaPedidos</servlet-name>
    <url-pattern>/ServletAgregarLineaPedidos</url-pattern>
  </servlet-mapping>
</web-app>